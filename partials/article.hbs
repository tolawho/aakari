<article class="{{post_class}}" data-aos="fade-up">
	<a href="{{url absolute='true'}}" class="text-dark"><h2>{{title}}</h2></a>
	<div class="meta">
		{{#primary_author}}
		{{#if profile_image}}<img class="img" src="{{img_url profile_image absolute='true'}}" alt="{{name}}">{{/if}}
		<a href="{{url absolute='true'}}">{{name}}</a>{{/primary_author}}
		{{#if primary_tag}} <span>on</span> <a class="category" href="/tag/{{primary_tag.slug}}">{{primary_tag.name}}</a>{{/if}}
		<p class="sep">â€¢</p>
		<p class="time">{{date published_at format="MMMM DD, YYYY"}}</p>
	</div>
	{{#if feature_image}}
	<div class="image" style="background-image: url('{{img_url feature_image size='featured'}}')"></div>
	{{/if}}
	
    {{#is "index"}}
    <p class="excerpt">{{excerpt characters="340"}}</p>
	{{!-- <p><a href="{{url absolute='true'}}">Read More <i class="fas fa-long-arrow-alt-right"></i></a></p> --}}
	{{!-- <hr> --}}
    {{/is}}

    {{#is "post"}}
        <div class="content">
            {{content}}
        </div>
    {{/is}}
</article>